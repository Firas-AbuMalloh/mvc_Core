<h1> Extraordinary rooms with elegant, yet a rustic atmosohere </h1>
<div style="display:flex; justify-content:space-evenly">
@for (int i = 0; i < 3; i++)
{
    <div class="card" style="width: 18rem;text-align:center; background-color:azure">
        <img class="card-img-top" src="@path[i]" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@title[i]</h5>

            <p style="color:red">@price[i]</p>
            <a href="#" style="color:black">VIEW</a>
        </div>
    </div>
}
</div>