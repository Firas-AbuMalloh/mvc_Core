

@{
    Layout = "_Layout";
    string[] title = { "High Quality", "Comfortable for the eye", "beautiful and attractive" };
    string[] price = { "155.320", "785.55", "41.652" };
    string[] path = { "https://woodc.pk/wp-content/uploads/2023/06/jjnvcfvb.jpeg",
    "https://s3.amazonaws.com/homestratosphere/wp-content/uploads/2016/01/27205035/13-Living-Room-Furniture-Sofas-iStock-.jpg",
