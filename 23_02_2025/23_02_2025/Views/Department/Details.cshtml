@model _23_02_2025.Models.Department

<h2 class="text-center text-primary">Department Details</h2>

<div class="container mt-4">
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th class="bg-light">ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th class="bg-light">Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th class="bg-light">Description</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th class="bg-light">Number of Employees</th>
                <td>@Model.NumOfEmployee</td>
            </tr>
            <tr>
                <th class="bg-light">Requirements</th>
                <td>@Model.Requirment</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">🔙 Back to List</a>
    </div>
</div>
