@model _23_02_2025.Models.Department

<h2>Edit </h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name </label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumOfEmployee">NumOfEmployee</label>
        <input asp-for="NumOfEmployee" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Requirment">Requirment</label>
        <input asp-for="Requirment" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
