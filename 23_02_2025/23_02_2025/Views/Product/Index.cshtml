@model IEnumerable<_23_02_2025.Models.Product>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div style="display:flex; justify-content:space-evenly">
@foreach (var item in Model)
{


    <div class="card" style="width: 19rem;">
        <img src='@item.Image' class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>

            <p class="card-text">@item.Description</p>
            <b> @item.Price</b>
        </div>
            <div style="display:flex; justify-content:space-evenly">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>

                <form method="post" asp-action="Delete">


                    <button type="submit" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button>

                </form>
    </div>
    </div>

}
</div>